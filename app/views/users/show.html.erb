<ul>
    <li>
      <%= @user.photo %>
    </li>
    <li>
      <%= @user.name %>
    </li>
    <li>
      <%= @user.posts_count %>
    </li>
    <li>
      <%= @user.bio %>
    </li>
</ul>
<ul>
  <% @user.posts.each do |user_post| %>
    <li>
      <%= user_post.title %>
    </li>
    <li>
      <%= user_post.text %>
    </li>
    <li>
      <%= user_post.comments_count %>
    </li>
    <li>
      <%= user_post.likes_count %>
    </li>
  <% end %>
</ul>