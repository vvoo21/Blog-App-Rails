<% if recent_posts.any? %>
  <div>
    <% recent_posts.each do |post| %>
      <%= link_to user_post_path(post.author, post) do %>
        <%= render "shared/post_info", post: post %>
      <% end %>
    <% end %>
  </div>

  <%= link_to "See all posts", user_posts_path(user) %>
<% else %>
  <p class="text">There are no Posts</p>
<% end %>