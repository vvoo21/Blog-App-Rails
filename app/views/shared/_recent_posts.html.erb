<% if recent_posts.any? %>
  <div>
    <% recent_posts.each do |post| %>
      <%= link_to user_post_path(post.author, post), class: 'pad_1em flex_column border_solid mb_1em' do %>
        <%= render "shared/post_info", post: post %>
      <% end %>
    <% end %>
  </div>

  <%= link_to "See all posts", user_posts_path(user), class: 'border_solid pad_0_5em as_center color_black' %>
<% else %>
  <p class="text">There are no Posts</p>
<% end %>