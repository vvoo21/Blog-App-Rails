<h1>Posts</h1>

<ul>
  <% @posts.each do |post| %>
   <li>
      <%= post.title %>
    </li>
    <li>
      <%= post.text %>
    </li>
    <li>
      <%= post.comments_count %>
    </li>
    <li>
      <%= post.likes_count %>
    </li>
    <% post.comments.each do |comment| %>
        <p class="text"><%= comment.author.name %>: <span class="brown"> <%= comment.text %> </span> </p>
    <% end %>
  <% end %>
</ul>
